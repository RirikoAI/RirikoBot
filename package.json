{
  "name": "ririko",
  "version": "1.0.0",
  "description": "Ririko - A powerful AI-powered general Discord bot that you can call your companion",
  "author": "Earnest Angel",
  "email": "me@angel.net.my",
  "url": "https://angel.net.my/",
  "keywords": [
    "AI",
    "Chatbot",
    "Twitch Live",
    "Discord bot",
    "Discord Chat Bot",
    "discord.js v14",
    "discord moderation bot",
    "discord Twitch Live notifier",
    "Ririko"
  ],
  "license": "MIT",
  "scripts": {
    "setup": "npm install && npm run migration:run && npm run seed:run",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "build": "cross-env NODE_ENV=production nest build && npm run build:deployment",
    "build:deployment": "cp -r public build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --forceExit",
    "test:ci": "cp .env.example .env.test && mkdir test-results && jest --runInBand --no-cache  --detectOpenHandles --forceExit --reporters=default --reporters=jest-junit --coverage && mv junit.xml test-results",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "cross-env npm run typeorm -- --dataSource=src/database/data-source.ts migration:generate ./src/database/migrations/$npm_config_name",
    "migration:create": "cross-env npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "cross-env npm run typeorm -- --dataSource=src/database/data-source.ts migration:run",
    "migration:revert": "cross-env npm run typeorm -- --dataSource=src/database/data-source.ts migration:revert",
    "seed:create": "hygen seeds create",
    "seed:run": "ts-node -r tsconfig-paths/register ./src/database/seeds/run-seed.ts",
    "upgrade:bash": "sh scripts/bash-upgrade.sh",
    "publish:npm": "npm publish --access public",
    "publish:docker": "docker build -t ririkoai/ririkobot:latest . && docker login && docker push ririkoai/ririkobot:latest",
    "docker:build": "docker build -t ririkoai/ririkobot:latest .",
    "docker:push": "docker push ririkoai/ririkobot:latest"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@distube/deezer": "^2.0.1",
    "@distube/soundcloud": "^2.0.4",
    "@distube/spotify": "^2.0.2",
    "@distube/youtube": "^1.0.4",
    "@distube/ytdl-core": "git@github.com:earnestangel/ytdl-core-patch.git",
    "@nestjs/common": "^10.4.17",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.17",
    "@nestjs/platform-express": "^10.4.17",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/typeorm": "^10.0.2",
    "anime-wallpaper": "^3.2.2",
    "asdfjkl": "^0.0.7",
    "axios": "^1.9.0",
    "better-sqlite3": "^11.9.1",
    "canvas": "^3.1.0-rc.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cross-env": "^7.0.3",
    "discord-giveaways": "^6.0.1",
    "discord.js": "^14.19.3",
    "distube": "^5.0.7",
    "dotenv": "^16.5.0",
    "genius-lyrics": "^4.4.7",
    "mongodb": "^5.9.2",
    "ms": "3.0.0-canary.1",
    "nest-commander": "^3.17.0",
    "ollama": "^0.5.15",
    "opusscript": "^0.1.1",
    "parsec": "^2.0.2",
    "reflect-metadata": "^0.2.2",
    "replicate": "^1.0.1",
    "require-all": "^3.0.0",
    "rxjs": "^7.8.2",
    "sodium-native": "^4.3.3",
    "songlyrics": "^2.4.8",
    "sqlite3": "^5.1.7",
    "stackblur-canvas": "^2.7.0",
    "typeorm": "^0.3.22",
    "youtubei.js": "^13.4.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.6.2",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^10.4.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.3.1",
    "hygen": "^6.2.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-addon-api": "7.1.1",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
