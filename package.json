    "moment": "^2.29.4",
    "mongoose": "^6.4.4",
    "ms": "^2.1.3",
    "nlpcloud": "^1.0.40",
    "node-fetch": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "openai": "^3.1.0",
    "pretty-ms": "^8.0.0",
    "quick.db": "^9.0.5",
    "source-map-support": "^0.5.21"
