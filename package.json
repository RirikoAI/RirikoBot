    "Chatbot",
    "General Discord bot",
    "gpt-neox-20b"
  ],
  "scripts": {
    "start": "npm run start:dev",
    "start:prod": "export NODE_ENV=production || set NODE_ENV=production && npm run index",
    "start:dev": "export NODE_ENV=development || set NODE_ENV=development && nodemon --exec npm run rebuild-and-start",
    "rebuild-and-start": "npm-run-all -s build index",
    "build": "babel src --out-dir dist --extensions \".ts,.js\" --copy-files --presets minify",
    "index": "node index.js"
  },
  "dependencies": {
    "better-sqlite3": "^7.6.2",
