{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "#*": [
        "src/*"
      ]
    }
  },
  "watchOptions": {
    "watchFile": "fixedPollingInterval"
  },
  "exclude": [
    "config/*.ts",
    "node_modules",
    "*-base.js",
    "public",
    "test-results",
    "scripts",
    "dist",
    ".hygen/**",
    ".github/**",
    ".circleci/**",
    "typings/browser.d.ts",
    "typings/browser/**"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}
