{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "allowJs": true,
    "moduleDetection": "force",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "app/*": ["app/*"],
      "commands/*": ["commands/*"],
      "utils/*": ["utils/*"],
      "ririkoBot": ["ririkoBot.js"],
      "languages/*": ["languages/*"],
      "tools/*": ["tools/*"],
      "assets/*": ["assets/*"],
      "helpers/*": ["helpers/*"],
      "@helpers/*": ["helpers/*"],
      "handlers/*": ["handlers/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}